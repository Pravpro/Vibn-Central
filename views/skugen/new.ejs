<!-- Loading Spinner -->
<div class="spinner-wrapper d-flex justify-content-center align-items-center position-absolute w-100 h-100 top-0 start-0 d-none">
    <div class="spinner-border text-warning" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>

<div class="skugen-content">
    <% for (let i = 0; i < skuformat.length-1; i++){ %>
        <div class="skugen-form-page <% if(i > 0) { %>d-none<% } %>">
            <div class="progress mb-3">
                <div class="progress-bar bg-warning" role="progressbar" style="width: <%- i/(skuformat.length-1)*100 %>%" aria-valuenow="<%- i/(skuformat.length-1)*100 %>" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <p class="fs-4 text-center sku-seg-name"><%- skuformat[i].name %></p>
            <% const keys = Array.from(skuformat[i].data.keys()); %>
            <div class="row row-cols-2 row-cols-sm-3 row-cols-lg-4">
                <% for (let j = 0; j < keys.length; j++){ %>
                    <div class="col mb-3">
                        <button class="sku-seg-option btn btn-outline-warning w-100">
                            <%- keys[j] %>
                        </button>
                    </div>
                <% } %>
            </div>
        </div>
    <% } %>
    <div class="skugen-form-page d-none">
        <div class="progress mb-3">
            <div class="progress-bar bg-warning" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12 col-md-9 col-lg-6 col-xl-5">

                <div class="border-bottom border-secondary p-2">
                    <p class="fs-4 text-center">Enter Proeprties for this SKU.</p>
                    <form id="sku-properties-form">
                        <% skuProps.forEach( (prop) => { %>
                            <div class="mb-3 row">
                                <label for="input<%- prop.name %>" class="col-sm-3 col-form-label"><%- prop.label %></label>
                                <div class="col-sm-9">
                                  <input type="<%- prop.type %>" name="<%- prop.name %>" class="form-control" id="input<%- prop.name %>">
                                </div>
                            </div>
                        <% }); %>
                    </form>
                </div>

                <div class="row justify-content-center mt-4">
                    <div class="col-8">
                        <div class="row">
                            <label for="inputCopies" class="col-3 col-form-label">Copies</label>
                            <div class="col-9">
                              <input type="Number" value="1" min="1" name="copies" class="form-control" id="inputCopies">
                            </div>
                        </div>
                    </div>
                </div>
    
                
            </div>
        </div>
        
    </div>
    
    <div class="footer-buttons d-flex justify-content-center mt-4">
        <button class="btn btn-dark skugen-nav me-3" name="prev" disabled>Previous</button>
        <button class="btn btn-dark skugen-nav" name="next" disabled>Next</button>
    </div>
</div>